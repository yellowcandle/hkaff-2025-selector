{
  "name": "hkaff-2025-selector",
  "version": "1.0.0",
  "description": "Hong Kong Asian Film Festival 2025 Screening Selector",
  "type": "module",
  "scripts": {
    "test": "vitest run",
    "test:watch": "vitest",
    "test:ui": "vitest --ui",
    "test:contract": "vitest run tests/contract",
    "test:unit": "vitest run tests/unit",
    "test:e2e": "playwright test",
    "dev": "vite",
    "dev:cf": "npm run build && wrangler dev",
    "build": "vite build",
    "build:cf": "npm run build && wrangler build",
    "preview": "vite preview",
    "deploy": "npm run build && wrangler deploy",
    "deploy:staging": "npm run build && wrangler deploy --env staging",
    "deploy:production": "npm run build && wrangler deploy --env production",
    "workers:login": "wrangler login",
    "workers:whoami": "wrangler whoami"
  },
  "devDependencies": {
    "@cloudflare/workers-types": "^4.20251011.0",
    "@playwright/test": "^1.55.1",
    "@tailwindcss/postcss": "^4.1.14",
    "@types/node": "^20.10.0",
    "@types/react": "^19.2.0",
    "@types/react-dom": "^19.2.0",
    "@vitejs/plugin-react": "^5.0.4",
    "@vitest/ui": "^3.2.4",
    "ajv": "^8.12.0",
    "ajv-formats": "^2.1.1",
    "autoprefixer": "^10.4.21",
    "itty-router": "^5.0.22",
    "jsdom": "^27.0.0",
    "playwright": "^1.55.1",
    "postcss": "^8.5.6",
    "tailwindcss": "^4.1.14",
    "typescript": "^5.3.3",
    "vite": "^7.1.7",
    "vitest": "^3.2.4",
    "wrangler": "^4.43.0"
  },
  "dependencies": {
    "@heroicons/react": "^2.2.0",
    "date-fns": "^4.1.0",
    "i18next": "^25.5.3",
    "react": "^19.2.0",
    "react-dom": "^19.2.0",
    "react-i18next": "^16.0.0"
  }
}
